server {

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Note: You shoulp://127.0.0.1/时,配d disable gzip for SSL traffic.
        # See: https://bugs.debian.org/773332
        #
        # Read up on ssl_ciphers to ensure a secure configuration.
        # See: https://bugs.debian.org/765782
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        # include snippets/snakeoil.conf;

        root /var/www/app-domeland;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;
        server_name test.domeland.vip; # managed by Certbot



        location / {
                # reverse proxy for next server
                proxy_read_timeout     60;
                proxy_connect_timeout  60;
                proxy_redirect         off;

                proxy_pass http://127.0.0.1:3001;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;


                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                add_header 'Access-Control-Allow-Origin' '*';
                add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
                # Optional: Allow headers for cookies, authorization and content-type
                add_header 'Access-Control-Allow-Headers' 'Cookie,Authorization,Content-Type';
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri $uri/ /;
        }

        location /_next/static {
                add_header Cache-Control "public, max-age=3600, immutable";
                proxy_pass http://127.0.0.1:3000/_next/static;
        }

        location /mint {
                index index.html index.htm index.nginx-debian.html;
                root /var/www/app-domeland;
         }

        location /static {
                index index.html index.htm index.nginx-debian.html;
                root /var/www/app-domeland;
         }

         location ~ / .well-known {
                allow all;
         }
     


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/test.domeland.vip/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/test.domeland.vip/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
        if ($host = test.domeland.vip) {
                return 301 https://$host$request_uri;
        } # managed by Certbot

        listen 80 ;
        listen [::]:80 ;
        server_name test.domeland.vip;
        return 404; # managed by Certbot

}